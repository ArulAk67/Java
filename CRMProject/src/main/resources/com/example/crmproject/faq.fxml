<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: skyblue;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.crmproject.faqjava">
    <children>
        <Label alignment="CENTER" layoutX="-1.0" layoutY="14.0" prefHeight="23.0" prefWidth="600.0" text="FREQUENT   QUESTIONS ">
            <font>
                <Font name="Verdana Bold" size="18.0" />
            </font>
        </Label>
        <Button fx:id="faqb" alignment="CENTER" layoutX="220.0" layoutY="76.0" mnemonicParsing="false" onAction="#question" style="-fx-background-color: lightyellow;" text="Click here to get questions">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
            <effect>
                <DropShadow />
            </effect></Button>
        <TextArea fx:id="qlist" layoutX="13.0" layoutY="157.0" prefHeight="229.0" prefWidth="577.0">
         <font>
            <Font name="Arial Bold" size="13.0" />
         </font></TextArea>
        <Button fx:id="backb" layoutX="269.0" layoutY="115.0" mnemonicParsing="false" onAction="#back" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: blue;" text="Back" textFill="#232323">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <effect>
                <DropShadow />
            </effect>
        </Button>
    </children>
</AnchorPane>
